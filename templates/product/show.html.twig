{% extends 'base.html.twig' %}

{% block title %}{{ produit.name }} - Data Service!{% endblock %}

{% block content %}
    <div class="row product-container">

        <div class="row">
            <div class="col-md-5">
                <img width="200px" height="200px" src="/uploads/{{ produit.illustration }}" alt="{{ produit.name }} class="img-fluid">
            </div>
            <div class="col-md-7 my-auto">
                <h3>{{ produit.name }}</h3>
                <p>{{ produit.subtitle }}</p>
                <span class="product-page-price">{{ (produit.price/100)|number_format(2,',','.') }}CFA</span>
                <hr>
                <p>
                    {{ produit.description }}
                </p>
                <a href="{{ path('add_to_cart',{'id':produit.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            </div>

        </div>
    </div>

{% endblock %}
