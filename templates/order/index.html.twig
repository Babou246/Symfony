{% extends 'base.html.twig' %}

{% block title %}Valider mes commande- Data Service!{% endblock %}

{% block content %}
    <h1>Je passe ma commande</h1>
    <p>
        Choississez vos préferences avant de passer vos commandes chez Data Service
    </p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form,{action:path('order_recap')}) }}
                    {{ form_label(form.addresses,'Choisissez vos adresses de livraison') }}
                    <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
                {{ form_end(form) }}
            {% endset %}

            {{ formHtml|replace({'[br]':'<br/>'})|raw }}
            <b>
                Choisir mon transporteur
            </b>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Recap de ma commande</b><br/>
                <p>Trouver le récapitulatif de vos produits</p>
            </div>

            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {% if key>0 %}mt-2{% endif %}">
                        <div class="col">
                            <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                        </div>
                        <div class="col-md-8 my-auto">
                            {{ product.product.name }}
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-md my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <b>
                Bouton pour payer
            </b>
        </div>
        <div class="col-md-6"></div>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>


    </div>
{% endblock %}
